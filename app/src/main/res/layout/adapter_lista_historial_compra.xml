<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtNombreHistorialLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/etMoneyHistorial"
        android:textColor="@drawable/list_item_color_enabled"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/etFechaHistorialLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtNombreHistorialLista" />

    <TextView
        android:id="@+id/etListaHistorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/etMoneyHistorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtNombreHistorialLista"
        android:layout_toStartOf="@+id/etListaHistorial"
        android:text="@string/etMoney" />
</RelativeLayout>