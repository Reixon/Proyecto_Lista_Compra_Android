<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">


        <ImageView
            android:id="@+id/imagenListProductos"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:contentDescription="@string/descriptionPhotoBt"
            android:src="@drawable/photo_icon" />

        <TextView
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imagenListProductos"
            android:layout_toEndOf="@+id/imagenListProductos"
            android:ems="40"
            android:gravity="start"
            android:minWidth="10dp"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textSize="14sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/etcheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <TextView
            android:id="@+id/txt_precio_prod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_toEndOf="@+id/etMoneda"
            android:layout_toRightOf="@+id/etMoneda"
            android:gravity="start"
            android:maxLength="10"
            android:textAlignment="textStart"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/etMoneda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_precio_prod"
            android:layout_alignBottom="@+id/txt_precio_prod"
            android:layout_alignStart="@+id/name"
            android:text="@string/etEuro" />

        <TextView
            android:id="@+id/txtCantidad"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/name"
            android:ems="15"
            android:text="(1)"
            android:textSize="14sp"
            android:textStyle="bold" />
</RelativeLayout>
