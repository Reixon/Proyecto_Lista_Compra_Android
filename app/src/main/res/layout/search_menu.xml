<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/background_light">

        <EditText
            android:id="@+id/txt_lista_productos"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginRight="100dp"
            android:background="@android:color/background_light"
            android:ems="25"
            android:focusableInTouchMode="true"
            android:hint="AÃ±adir Producto"
            android:inputType="textCapSentences"
            android:paddingRight="5dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textColorHighlight="@color/zxing_viewfinder_mask"
            android:textColorHint="@color/zxing_custom_result_view"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/bt_ok_menu_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|center_vertical"
            android:background="@android:color/background_light"
            android:visibility="gone"
            app:srcCompat="@drawable/icon_ok" />

        <ImageButton
            android:id="@+id/bt_speak"
            app:srcCompat="@android:drawable/ic_btn_speak_now"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|center_vertical"
            android:background="@android:color/background_light" />

        <ImageButton
            android:id="@+id/bt_scanner_search"
            app:srcCompat="@drawable/icon_codebar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="50dp"
            android:background="@android:color/background_light" />
    </FrameLayout>


</LinearLayout>
