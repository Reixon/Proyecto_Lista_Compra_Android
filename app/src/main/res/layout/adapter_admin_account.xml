<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_shared_option_list"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView_shared_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_shared_option_list"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/image_shared_option_list"
        android:text="TextView"
        android:textColor="@drawable/list_item_color_enabled"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/image_shared_option_list" />
</RelativeLayout>