    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="395dp"
        android:layout_height="587dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


        <ImageView
            android:id="@+id/imagenListProductos"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/photo_icon"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/imagenListProductos"
            android:layout_alignTop="@+id/imagenListProductos"
            android:layout_marginRight="30dp"
            android:layout_marginStart="50dp"
            android:text="nombre"
            android:maxLength="30"
            android:textSize="14sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/etcheckBox"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_alignTop="@+id/nombre"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/txt_precio_prod" />

        <TextView
            android:id="@+id/txt_precio_prod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="precio"
            android:maxLength="10"
            android:textAlignment="textStart"
            android:layout_below="@+id/nombre"
            android:layout_toEndOf="@+id/txtMoneda" />

        <TextView
            android:id="@+id/txtMoneda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" â‚¬ "
            android:layout_alignBaseline="@+id/txt_precio_prod"
            android:layout_alignBottom="@+id/txt_precio_prod"
            android:layout_alignStart="@+id/nombre" />

        <TextView
            android:id="@+id/txtCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/nombre"
            android:layout_alignTop="@+id/nombre"
            android:layout_toEndOf="@+id/nombre"
            android:text="(1)"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>
